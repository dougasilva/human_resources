<p id="notice"><%= notice %></p>

<h2>Colaboradores</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Cargo</th>
      <th scope="col">Celular</th>
      <th scope="col">Email</th>
      <th scope="col">Início</th>
      <th scope="col">Saída</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @colaboradores.each do |colaborador| %>
      <tr>
        <td><%= colaborador.nome %></td>
        <td><%= colaborador.cargo.nome %></td>
        <td><%= colaborador.celular %></td>
        <td><%= colaborador.email %></td>
        <td><%= colaborador.dt_inicio.strftime('%d/%m/%Y') %></td>
        <% if colaborador.dt_saida %>
          <td><%= colaborador.dt_saida.strftime('%d/%m/%Y') %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Exibir', colaborador %></td>
        <td><%= link_to 'Editar', edit_colaborador_path(colaborador) %></td>
        <td><%= link_to 'Excluir', colaborador, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-actions" style="color: white">
  <%= link_to 'Novo Colaborador', new_colaborador_path, class: "btn btn-info" %>
  <%= link_to 'Voltar', root_path, class: "btn btn-warning" %>
</div>
