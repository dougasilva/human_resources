<p id="notice"><%= notice %></p>

<h2>Cargos</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.nome %></td>
        <td><%= cargo.descricao %></td>
        <td><%= link_to 'Exibir', cargo %></td>
        <td><%= link_to 'Editar', edit_cargo_path(cargo) %></td>
        <td><%= link_to 'Excluir', cargo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="form-actions" style="color: white">
  <%= link_to 'Novo Cargo', new_cargo_path, class: "btn btn-info" %>
  <%= link_to 'Voltar', root_path, class: "btn btn-warning" %>
</div>
